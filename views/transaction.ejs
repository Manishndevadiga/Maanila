<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

.navbar{
    height:90px;
    background-color:#0C359E;
    width:100%;
    display:flex;
    justify-content:space-around;
    align-items:center;
   }

   .navigation{
    position:absolute;
    background-color: #2D3250;
    height: 300px;
    width: 250px;
    border-radius: 10px;
    z-index: 1;
    margin-top: 15px;
    margin-left: 20px;
    display:none;
   }

   ul{
    list-style-type: none; 
    text-align: center;
    margin-top: 20px;
    padding:20px;
   }
   a{
    color: white;
    text-decoration: none;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
   }
   li {
     color: white;
     font-size: 18px;
     text-decoration: none;
     font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
   }
   li{
    display:flex;
    flex-direction:column;
    align-items:center;
    transition: all .3s ease-in;
    padding-top: 30px;
   }
   li:hover{
        transform: scale(1.1);
        cursor: pointer;
        background-color: #31375a;
   }
   a:hover{
    text-decoration: none;
    color:rgb(93, 93, 163);
   }

#logo{
  margin-left: 40%;
  margin-top: 10px;
}

   img{
    height:45px;
    width:45px;
   }
    
        .table-container {
            max-width: 800px;
            margin: 0 auto;
            margin-top: 50px;
        }
        h1{
            text-align: center;
        }
        tr:hover{
            background-color: rgb(229, 233, 237);
        }

        ::-webkit-scrollbar {
  width: 0px;
}
::-webkit-scrollbar-track {
  background: #efe6e6;
}

    </style>
</head>
<body>

    <div class="navigation"> 
        <div class="logo" id="logo"><img src="https://as1.ftcdn.net/v2/jpg/00/69/37/26/1000_F_69372697_LSptpUKLbHwJSeCdBZ2uINqCQkg34oBF.jpg" alt="logo" class="logo1"  onclick="closeNav()"></div>
        <ul>
          <li><a href="/group/groupForm">ADD GROUP</a></li>
          <li><a href="/budget/issue_budget">ISSUE BUDGET</a></li>
          <li><a href="/people/admin_dashboard">ADMIN DASHBOARD</a></li>
        </ul>
      </div>
    
      <div class="navbar">
        <div class="nav">
            <div class="logo"><img src="https://icon-library.com/images/white-menu-icon-png/white-menu-icon-png-18.jpg" alt="logo" onclick="openNav()"></div>
        </div>
        
        <div ><a href="/home">HOME</a></div>
        <div> <a href="/people/peopleForm">ADD USERS</a></div>
        <div><a href="/people/user_details">USER DETAILS</a></div>
        <div><a href="/payment/pending">PENDING STATUS</a></div>
    
    </div>
    
    <div class="container table-container">
        <h1 class="mb-4">Transaction Details</h1>
        <% if (transactionData && transactionData.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Year</th>
                        <th>Group Name</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactionData.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(transaction => { %>
                        <tr>
                            <td><%= transaction.name %></td>
                            <td><%= transaction.amount %></td>
                            <td><%= transaction.type %></td>
                            <td><%= transaction.year %></td>
                            <td><%= transaction.groupname %></td>
                            <td><%= new Date(transaction.date).toLocaleString() %></td>
                            <td><button class="btn btn-primary" onclick="printTransactionDetails('<%= transaction.name %>','<%= transaction.amount %>','<%= transaction.type %>')">Print</button></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No transactions found.</p>
        <% } %>
    </div>
    
    <script>
        function printTransactionDetails(name,amount,type) {

            console.log(name,amount,type);

               const data={
                       name,
                       amount,
                       type
                       };
              fetch('/payment/generate_bill', {
                     method: 'POST',
                     headers: {
                    'Content-Type': 'application/json'   
                    },
                     body: JSON.stringify(data)  
                       }).then(response => {
              if (response.ok) {
               return response.blob();
               } else {
               throw new Error('Failed to generate PDF');
               }
               })
             .then(blob => {
              const url = URL.createObjectURL(blob);
             window.open(url, '_blank');
                                   })
           .catch(error => {
             console.error('Error:', error);
           });
            }
    </script>

<script>
    function openNav() {
         document.querySelector('.navigation').style.display = 'block';
     }
     function closeNav() {
         document.querySelector('.navigation').style.display = 'none';
     }
  </script>
    
</html>



